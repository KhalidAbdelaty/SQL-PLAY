# SQL Playground Backend Configuration
# Copy this file to .env and update with your settings

# ===================================
# Database Configuration
# ===================================

# SQL Server hostname or IP address
DB_SERVER=localhost

# Default database to connect to
DB_DATABASE=master

# ODBC Driver (17 or 18)
DB_DRIVER=ODBC Driver 17 for SQL Server

# Windows Authentication (yes/no)
# Set to 'yes' to use Windows credentials
# Set to 'no' to use SQL Server authentication
DB_TRUSTED_CONNECTION=yes

# SQL Server Authentication (only if DB_TRUSTED_CONNECTION=no)
# DB_USERNAME=sa
# DB_PASSWORD=YourPassword123

# ===================================
# Query Execution Settings
# ===================================

# Maximum query execution time in seconds
MAX_EXECUTION_TIME=30

# Maximum number of rows to return per query
MAX_RESULT_ROWS=10000

# Maximum concurrent queries per user session
MAX_CONCURRENT_QUERIES=3

# ===================================
# Security Settings
# ===================================

# Require WHERE clause for DELETE/UPDATE (true/false)
REQUIRE_WHERE_FOR_DELETE=true

# Enable audit logging (true/false)
ENABLE_AUDIT_LOG=true

# ===================================
# Server Settings
# ===================================

# Host to bind to (0.0.0.0 for all interfaces, 127.0.0.1 for localhost only)
HOST=0.0.0.0

# Port for backend server
PORT=8000

# Enable hot reload in development (true/false)
RELOAD=true

# ===================================
# CORS Settings
# ===================================

# Allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# ===================================
# Session Settings
# ===================================

# Session timeout in seconds (default: 3600 = 1 hour)
SESSION_TIMEOUT=3600

# Maximum history items to keep per session
MAX_HISTORY_ITEMS=100

